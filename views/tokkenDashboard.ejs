<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Token Dashboard</title>
    <link rel="stylesheet" href="css/style.css">

    <Style>
        tr:nth-child( <%= count %> ){
            background-color: hotpink;
        }
    </Style>
</head>
<body>
    <div class="contanier">
        <div class="tokkenTable">
            <h1>Token Dashboard for Doctor's clinic</h1>
        <table>
            <tr>
                <th> </th>
                <th>NAME</th>
                <th>PHONE</th>
                <th>TOKEN</th>
            </tr>

            <% for(var i=0;i<tokken.length;i++){ %>
                <tr> 
                    <td> <%= i+1 %></td>
                    <td> <%= tokken[i].pateintname %> </td>
                    <td> <%= tokken[i].patientphonenumber %> </td>
                    <td> T-<%= tokken[i].tokkennumber %> </td>
                </tr>

           <% } %>
        </table>
        </div>
        <form action="/" method="post">
            <button class="nextTokkenBtn" name="nextTokkenBtn" value="plusOne">NEXT TOKEN</button>
        </form>

        <div class="addPatient">
            <h2>Add Patient</h2>
            <form action="/" method="post">
                <input type="text" placeholder="Patient Name" name="patientName">
                <input type="number" placeholder="Phone number" name="phoneNumber">
                <button type="submit" class="generateTokkenBtn" name="generateTokkenBtn" value="generateTokken">GENERATE TOKEN</button>
            </form>
        </div>
    </div>
    
</body>
</html>